x=input("enter the  grade of the employee=")
y=int(input("enter the employee salary=rs."))
print("salary=",y)
if (x=="A"):
    if(y>=10000):
        a=y*0.05
    else:
        a=y*0.02
else:
    if(y>=10000):
        a=y*0.10
    else:
        a=y*0.02
print("bonus=",a)
print("total to be paid=",y+a)
        
        
